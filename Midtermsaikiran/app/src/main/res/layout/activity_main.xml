<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Square Area Calculator"
        android:textSize="24sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"/>

    <!-- Input for side length -->
    <EditText
        android:id="@+id/input_side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter side length (e.g., 5.0)"
        android:inputType="numberDecimal"
        android:backgroundTint="#6200EE"
        android:padding="12dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:layout_below="@id/title_text"
        android:layout_marginBottom="20dp"/>

    <!-- Button to calculate area -->
    <Button
        android:id="@+id/calculate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Area"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/input_side"
        android:padding="12dp"
        android:layout_marginBottom="20dp"/>

    <!-- TextView to display result -->
    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculate_button"
        android:layout_centerHorizontal="true"
        android:text="Area: "
        android:textColor="#333333"
        android:textSize="20sp"
        android:padding="10dp"
        android:textStyle="bold"/>
</RelativeLayout>
